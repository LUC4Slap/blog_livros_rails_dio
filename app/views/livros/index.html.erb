<p style="color: green"><%= notice %></p>

<h1>Livros</h1>

<div id="livros">
  <% @livros.each do |livro| %>
    <div class="card p-4">
      <%= render livro %>
      <p>
        <%= link_to "Visualizar livro", livro, class: 'btn btn-primary' %>
      </p>
    </div>
  <% end %>
</div>

<%= link_to "Novo Livro", new_livro_path, class: "btn btn-primary mt-3" %>
