    <%= form.label :autor, style: "display: block" %>
    <%= form.text_field :autor, class: "form-control" %>
  </div>

  <div>
    <%= form.label :nota, style: "display: block" %>
    <%= form.number_field :nota, class: "form-control" %>
  </div>

  <div>
    <%= form.label :descricao, style: "display: block" %>
    <%= form.text_area :descricao, class: "form-control" %>
